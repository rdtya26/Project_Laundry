<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="5dp"
    android:layout_marginTop="5dp"
    app:cardUseCompatPadding="true"
    android:padding="10dp"
    android:backgroundTint="@color/biru">

    <TextView
        android:id="@+id/nameadapter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Name,"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/txtjenis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jenis Laundry:"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginTop="70dp"
        android:layout_marginStart="20dp"/>

    <TextView
        android:id="@+id/jenisadapter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jaket"
        android:textSize="20dp"
        android:layout_marginTop="90dp"
        android:layout_marginStart="20dp"/>

    <TextView
        android:id="@+id/txtestimasi"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="ESTIMASI:"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginTop="65dp"
        android:layout_marginStart="260dp"/>

    <TextView
        android:id="@+id/estimasiadapter"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="2-3hari"
        android:textSize="20dp"
        android:layout_marginTop="85dp"
        android:layout_marginStart="260dp"/>

    <TextView
        android:id="@+id/idlaundry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginTop="150dp"
        android:layout_marginStart="20dp"/>

    <ImageButton
        android:id="@+id/titik3"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:background="@color/white"
        android:layout_marginStart="280dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/ic_baseline_more_vert_24" />

    <ImageButton
        android:id="@+id/edit"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:background="@color/white"
        android:layout_marginStart="280dp"
        android:layout_marginTop="135dp"
        android:backgroundTint="@color/white"
        android:src="@drawable/ic_baseline_edit_24" />



</androidx.cardview.widget.CardView>